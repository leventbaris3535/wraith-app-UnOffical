{
  "name": "wraith-app",
  "version": "1.0.0",
  "description": "Wraith tray + Chromium app",
  "author": "leventbaris3535",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.custom.wraith",
    "productName": "WraithApp",
    "files": [
      "**/*",
      "!node_modules/{.cache,.bin,electron*}/**/*",
      "!**/*.{md,markdown,yml,yaml}"
    ],
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WraithApp"
    }
  }
}
